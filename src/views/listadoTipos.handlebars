<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Animales</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="container mt-5">

    <!-- Contenedor principal -->
    <div class="main-container">
        
        <!-- Sección de Tipos de Animales -->
        <section class="tipos-animales-section mb-4">
            <h3>Tipos de Animales Disponibles</h3>
            <ul class="list-group">
                {{#each tiposAnimales}}
                <li class="list-group-item">{{tipo}}</li>
                {{/each}}
            </ul>
        </section>
        
        <!-- Sección de Animales -->
        <section class="animales-section">
            {{#each animales}}
            <div class="card p-4 mb-3 shadow-sm">
                <h5 class="card-title"><i class="fas fa-paw"></i> Animal: {{nombre}}</h5>
                <p><strong>Nombre dueño:</strong> {{idUsuario.nombre}}</p>
                <p><strong>Mail:</strong> {{idUsuario.email}}</p>
                <p><strong>Tipo Animal:</strong> {{idTipoAnimal.tipo}}</p>
            </div>
            {{/each}}
        </section>
    </div>

    <script src="/js/listadoTipos.js"></script>
</body>

</html>
