<!DOCTYPE html>
<html lang="en">

{{> head}}


<body>

{{#if (eq tipoUsuario 'admin')}}
{{> headerAdmin}}
{{else}}
{{> headerUser}}
{{/if}}

    <div class="main-content">
        <div class="container mt-4">
            <!-- Carrusel de mascotas -->
            <div id="carruselMascotas" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    {{#each mascotas}}
                    <div class="carousel-item {{#if @first}}active{{/if}}">
                        <div class="row justify-content-center">
                            <!-- Ficha de mascota -->
                            <div class="col-md-6">
                                <div class="card text-center">
                                    <div class="card-body">
                                        <img src="{{this.foto}}" class="img-fluid rounded-circle"
                                            alt="Foto de {{this.nombre}}" width="150">
                                        <h5 class="mt-3">{{this.nombre}}</h5>
                                        <p><strong>Tipo:</strong> {{idTipoAnimal.tipo}}</p>
                                        <p><strong>Email:</strong> {{idUsuario.email}}</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
                <!-- Controles del carrusel -->
                <button class="carousel-control-prev" type="button" data-bs-target="#carruselMascotas"
                    data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Anterior</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carruselMascotas"
                    data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Siguiente</span>
                </button>
            </div>
        </div>
    </div>


    {{> footer }}
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="/js/viewAdopciones.js"></script>
<script src="/js/header.js"></script>

</html>