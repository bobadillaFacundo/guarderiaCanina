<!DOCTYPE html>
<html lang="en">
{{> head}}
{{#if (eq tipoUsuario 'admin')}}
{{> headerAdmin}}
{{else}}
{{> headerUser}}
{{/if}}

<body>
    <div class="container mt-5">
        <form id="pagoForm" class="card p-4 shadow">
            <h2 class="mb-4 text-center">Pago con Tarjeta de Crédito</h2>

            <div class="mb-3">
                <label for="nombre" class="form-label">Nombre en la tarjeta:</label>
                <input type="text" id="nombre" name="nombre" class="form-control" required>
            </div>

            <div class="mb-3">
                <label for="numero" class="form-label">Número de tarjeta:</label>
                <input type="text" id="numero" name="numero" class="form-control" required>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label for="vencimiento" class="form-label">Fecha de vencimiento (MM/AA):</label>
                    <input type="text" id="vencimiento" name="vencimiento" class="form-control" required>
                </div>
                <div class="col-md-6 mb-3">
                    <label for="cvv" class="form-label">CVV:</label>
                    <input type="text" id="cvv" name="cvv" class="form-control" required>
                </div>
            </div>

            <div class="mb-3">
                <label for="monto" class="form-label">Monto a pagar:</label>
                <input type="text" id="monto" name="monto" class="form-control" disabled monto="{{reserva.montoTotal}}" value="{{reserva.montoTotal}}">
            </div>

            <button type="submit" class="btn btn-primary buttonPagar w-100">Pagar con Mercado Pago</button>
        </form>
    </div>
</body>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="/js/mercadoPago.js"></script>
<script src="/js/header.js"></script>

</html>