<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/index.css">
</head>
<body class="login-page d-flex justify-content-center align-items-center vh-100">
    <div class="container">
        <div class="card shadow-lg p-4 text-center">
            <h2 class="toggle-form mb-3">Validar Usuario</h2>
            <form id="formCAS" class="form" method="post" action="/api/usuarios/perfil">
                <!-- Campo Usuario -->
                <div class="mb-3">
                    <label for="email" class="form-label">Usuario</label>
                    <input type="text" id="email" class="form-control" placeholder="Usuario" name="usuario" required>
                </div>
                
                <!-- Campo Contraseña -->
                <div class="mb-3">
                    <label for="password" class="form-label">Contraseña</label>
                    <input type="password" id="password" class="form-control" placeholder="Contraseña" name="password" required>
                </div>

                <!-- Botón de inicio -->
                <button type="submit" class="btn btn-primary w-100">Entrar</button>
            </form>
            
            <!-- Botón Crear usuario -->
            <button type="button" class="btn btn-success w-100 mt-3 buttonCrearUsuario">Crear</button>
        </div>
    </div>
    {{> footer}}
</body>
    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/login.js"></script>
</html>
