{{!-- formularioMascota.handlebars --}}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registro de Mascota</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h2 class="mb-4">Registro de Mascota</h2>
        <form id="formCrearMascota" method="POST">
            <div class="mb-3">
                <label for="nombre" class="form-label">Nombre de la Mascota</label>
                <input type="text" class="form-control" id="nombre" name="nombre" required>
            </div>
            <div class="mb-3">
                <label for="tipo" class="form-label">Tipo de Animal</label>
                <select class="form-select" id="tipo" name="tipo" required>
                    {{#each animalesTipos}}
                        <option data-id-tipo={{_id}} value="{{_id}}">{{tipo}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="form-check mb-3">
                <input class="form-check-input" type="checkbox" id="adopcion" name="adopcion" value="true">
                <label class="form-check-label" for="adopcion">Disponible para Adopci√≥n</label>
            </div>
            <button type="submit" class="btn btn-primary">Registrar</button>
        </form>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/crearAnimal.js"></script>
</body>
</html>